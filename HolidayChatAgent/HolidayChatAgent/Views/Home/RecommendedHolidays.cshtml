@model HolidayViewModel

<div class="text-center">
    <h1 class="display-4">Here's some holiday destinations based on your search criteria below:</h1>
    <p>
        Category: @Model.UserPreferences.Category
    </p>
    <p>
        Climate: @Model.UserPreferences.TempRating
    </p>
    <p>
        Max Price: £@Model.UserPreferences.PricePerNight
    </p>
</div>

<hr />

<div class="row row-cols-4 gy-5">
    @foreach (var holiday in Model.Holidays)
    {
        <partial name="_Card" model="holiday" />
    }
</div>