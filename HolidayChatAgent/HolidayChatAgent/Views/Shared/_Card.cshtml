@model HolidayChatAgent.Services.Models.Domain.HolidayDetail

<div class="col">
    <div class="card" style="width: 18rem;">
        <img src="" alt="image of @Model.HotelName" class="card-img-top"/>
        <div class="card-body">
            <h5 class="card-title">@Model.HotelName - £@Model.PricePerNight/night</h5>
            <p class="card-text">A @Model.StarRating-star resort located in @Model.Country, perfect for a @Model.Category holiday with a @Model.TempRating climate.</p>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
        </div>
    </div>
</div>
